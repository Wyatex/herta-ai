{
  "name": "@root/herta-ai",
  "version": "0.0.0",
  "private": true,
  "packageManager": "bun@1.2.0",
  "contributors": [
    "Wyatex <wyatex@qq.com>"
  ],
  "license": "MIT",
  "homepage": "https://github.com/Wyatex/herta-ai",
  "main": "index.js",
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "dev": "turbo run dev",
    "build": "turbo run build",
    "test": "turbo run test",
    "lint": "bun run eslint .",
    "lint:fix": "bun run eslint . --fix",
    "prepare": "simple-git-hooks",
    "commit": "cz"
  },
  "devDependencies": {
    "@antfu/eslint-config": "^6.2.0",
    "@changesets/cli": "^2.29.7",
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "@types/node": "^24.5.2",
    "commitizen": "^4.3.1",
    "cz-git": "^1.12.0",
    "eslint": "^9.39.1",
    "eslint-plugin-import-x": "^4.16.1",
    "lint-staged": "^16.2.1",
    "prettier": "^3.6.2",
    "simple-git-hooks": "^2.13.1",
    "turbo": "^2.5.8",
    "typescript": "^5.9.2",
    "unbuild": "^3.6.1"
  },
  "simple-git-hooks": {
    "pre-commit": "bunx lint-staged",
    "commit-msg": "bunx commitlint --edit \"$1\""
  },
  "lint-staged": {
    "*.{js,ts,jsx,tsx}": "eslint --fix"
  },
  "config": {
    "commitizen": {
      "path": "cz-git"
    }
  }
}
